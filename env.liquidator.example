# ============================================
# LIQUIDATOR SERVICE CONFIGURATION
# ============================================
# Copy this file to .env.liquidator and fill in your values

# ====== Ponder Indexer ======

# RPC URL for Ponder indexer
PONDER_RPC_URL_1=http://localhost:8545

# Spoke contract address (Babylon dedicated Spoke)
SPOKE_ADDRESS=0x0000000000000000000000000000000000000000

# AaveIntegrationController address
CONTROLLER_ADDRESS=0x0000000000000000000000000000000000000000

# Chain ID (default: 1 for mainnet)
CHAIN_ID=1

# Block to start indexing from
START_BLOCK=0

# Polling interval in milliseconds (default: 1000 = 1 second)
PONDER_POLLING_INTERVAL=1000

# Database URL for Ponder (use docker compose to start PostgreSQL)
DATABASE_URL=postgresql://ponder:ponder@localhost:5432/ponder

# Database schema for Ponder (required when using PostgreSQL)
DATABASE_SCHEMA=public

# ====== Liquidation Client ======

# Liquidator private key (must have debt tokens to repay)
# Default: Anvil account #1 (0x70997970C51812dc3A010C7d01b50e0d17dc79C8)
LIQUIDATOR_PRIVATE_KEY=0xpriv_key

# Ponder API URL
PONDER_URL=http://localhost:42069

# RPC URL for liquidation transactions
RPC_URL=http://localhost:8545

# VaultSwap contract address (for swapping seized vaults)
VAULT_SWAP_ADDRESS=0x0000000000000000000000000000000000000000

# (Optional) Debt token addresses â€” auto-discovered from Spoke if not set
# Override with comma-separated addresses if needed
# DEBT_TOKEN_ADDRESSES=0xUSDC...,0xUSDT...

# WBTC token address (for swapping seized vaults)
WBTC_ADDRESS=0x0000000000000000000000000000000000000000

# Auto-swap seized vaults for WBTC after liquidation (default: true)
# Set to "false" to hold vaults instead of swapping
AUTO_SWAP=true

# Polling interval in milliseconds (default: 10000 = 10 seconds)
POLLING_INTERVAL_MS=10000

# Metrics server port (default: 9090)
# Exposes /metrics (Prometheus), /health, /ready endpoints
METRICS_PORT=9090
